    <div class="col-md-3"><a href="/" class="header-left">首页</a></div>
    <div class="col-md-4">
        <div class="input-group">
            <input type="text" class="form-control " >
            <span class="input-group-btn">
            <button class="btn btn-danger" type="button" >搜 索</button>
            </span>
        </div><!-- /input-group -->
